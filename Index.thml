    <!-- CLIENTES -->
    <section id="clientes">
        <div class="section-title">
            <h2>NUESTROS PRINCIPALES CLIENTES</h2>
        </div>
        <div class="clients-logos">
            <img src="https://i.postimg.cc/WbLsjVbm/codelco.png" alt="Codelco" class="client-logo">
            <img src="https://i.postimg.cc/CKQV2TQb/enel.png" alt="Enel" class="client-logo">
            <img src="https://i.postimg.cc/L6pFwVNb/ESCONDIDA-BHP-LOGO.webp" alt="Minera Escondida" class="client-logo">
            <img src="https://i.postimg.cc/Bvydg5jp/sql.png" alt="SQM" class="client-logo">
            <img src="https://i.postimg.cc/RFSkm97p/historia-2008-icafal-removebg-preview.png" alt="Icafal" class="client-logo">
        </div>
    </section>

    <!-- CONTACTO -->
    <section id="contacto">
        <div class="section-title">
            <h2>CONTACTO</h2>
        </div>
        <div class="content-text">
            <p>Email: contacto@collaoinversiones.cl </p>
            <p>Teléfono: +56 9 8466 8575</p>
            <p>Dirección: Cl. Manuel Rodriguez 10, Taltal, Chile</p>
        </div>
    </section>

    <!-- FOOTER -->
    <footer>
        <p>&copy; 2025 Collao Inversiones en Minería SPA</p>
        <p>Soluciones Mineras · Transporte · Logística Integral</p>
    </footer>

    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>

</body>
</html>
